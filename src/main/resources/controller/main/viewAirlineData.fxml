<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: #303030;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.main.AirlineDataViewController">
    <children>
        <TableView fx:id="tableView" layoutX="190.0" layoutY="285.0" prefHeight="500.0" prefWidth="1053.0">
        <columns>
            <TableColumn fx:id="airlineIDColumn" prefWidth="94.0" text="Airline ID" />
            <TableColumn fx:id="airlineNameColumn" prefWidth="204.0" text="Airline Name" />
            <TableColumn fx:id="airlineAliasColumn" prefWidth="122.0" text="Alias" />
            <TableColumn fx:id="airlineIATAColumn" prefWidth="123.0" text="ITAT" />
            <TableColumn fx:id="ICAOColumn" minWidth="0.0" prefWidth="126.0" text="ICAO" />
            <TableColumn fx:id="callsignColumn" minWidth="0.0" prefWidth="116.0" text="Callsign" />
            <TableColumn fx:id="countryColumn" minWidth="0.0" prefWidth="150.0" text="Country" />
            <TableColumn fx:id="activeStatusColumn" minWidth="0.0" prefWidth="117.0" text="Active Status" />
        </columns>
      </TableView>
        <VBox prefHeight="800.0" prefWidth="218.0" style="-fx-background-color: #116754;">
            <children>
                <Button fx:id="btnUpload" alignment="CENTER" mnemonicParsing="false" onAction="#toUploadData" onMouseClicked="#toUploadData" prefHeight="68.0" prefWidth="225.0" style="-fx-background-color: transparent;" text="Upload Data" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Tahoma" size="22.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="btnRouteDataView" alignment="CENTER" mnemonicParsing="false" onAction="#toRouteDataView" prefHeight="95.0" prefWidth="218.0" style="-fx-background-color: transparent;" text="Analyse Route Data" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Tahoma" size="22.0" />
                    </font>
                </Button>
                <Button fx:id="btnAirportDataView" alignment="CENTER" mnemonicParsing="false" onAction="#toAirportDataView" prefHeight="88.0" prefWidth="227.0" style="-fx-background-color: transparent;" text="Analyse Airport Data" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Tahoma" size="22.0" />
                    </font>
                </Button>
                <Button fx:id="btnAirlineDataView" alignment="CENTER" mnemonicParsing="false" onAction="#toAirlineDataView" prefHeight="88.0" prefWidth="218.0" style="-fx-background-color: #00aa88;" text="Analyse Airline Data" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Tahoma" size="22.0" />
                    </font>
                </Button>
                <Button fx:id="btnFlightHistory" alignment="CENTER" mnemonicParsing="false" onAction="#toFlightHistory" prefHeight="72.0" prefWidth="220.0" style="-fx-background-color: transparent;" text="Flight History" textFill="WHITE">
                    <font>
                        <Font name="Tahoma" size="22.0" />
                    </font>
                </Button>
                <Button fx:id="btnCarbonEmissionsReport" alignment="CENTER" mnemonicParsing="false" onAction="#toCarbonEmissionsReport" prefHeight="116.0" prefWidth="218.0" style="-fx-background-color: transparent;" text="Carbon Emissions Report" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Tahoma" size="22.0" />
                    </font>
                </Button>
                <Button fx:id="btnMapOfAirports" alignment="CENTER" mnemonicParsing="false" onAction="#toMapOfAirports" prefHeight="78.0" prefWidth="218.0" style="-fx-background-color: transparent;" text="Map of Airports " textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Tahoma" size="22.0" />
                    </font>
                </Button>
                <Button fx:id="btnGraphs" alignment="CENTER" mnemonicParsing="false" onAction="#toGraphs" onMouseClicked="#toUploadData" prefHeight="60.0" prefWidth="218.0" style="-fx-background-color: transparent;" text="Graphs" textAlignment="CENTER" textFill="WHITE" wrapText="true">
                    <font>
                        <Font name="Tahoma" size="22.0" />
                    </font>
                </Button>
            </children>
        </VBox>
      <Button fx:id="searchButton" layoutX="1033.0" layoutY="182.0" mnemonicParsing="false" onAction="#search" text="Search" />
      <TextField fx:id="searchBar" layoutX="344.0" layoutY="182.0" prefHeight="25.0" prefWidth="673.0" />
      <ChoiceBox fx:id="searchTypeSelection" layoutX="177.0" layoutY="182.0" prefWidth="150.0" />
      <Label fx:id="errorText" layoutX="180.0" layoutY="216.0" prefHeight="25.0" prefWidth="904.0" textFill="RED">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
