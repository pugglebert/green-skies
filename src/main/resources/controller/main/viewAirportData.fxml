              <TableColumn fx:id="airportIDColumn" prefWidth="117.0" text="Airport ID" />
              <TableColumn fx:id="nameColumn" prefWidth="125.0" text="Airport Name" />
                <TableColumn fx:id="cityColumn" prefWidth="91.0" text="City" />
                <TableColumn fx:id="countryColumn" prefWidth="96.0" text="Coutry" />
                <TableColumn fx:id="IATAColumn" prefWidth="77.0" text="IATA" />
                <TableColumn fx:id="ICAOColumn" prefWidth="110.0" text="ICAO" />
                <TableColumn fx:id="latitudeColumn" minWidth="0.0" prefWidth="96.0" text="Latitude" />
