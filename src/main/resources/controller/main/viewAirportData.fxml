      <ChoiceBox fx:id="searchTypeSelection" layoutX="177.0" layoutY="182.0" prefWidth="150.0" />
      <Label fx:id="errorText" layoutX="180.0" layoutY="216.0" prefHeight="25.0" prefWidth="904.0" textFill="RED" visible="false">
         <font>
            <Font size="18.0" />
         </font></Label>
    </children>
